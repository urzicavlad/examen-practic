<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ro.ubbcluj.client.controller.home.HomeController">

    <HBox>
        <Button fx:id="btnCars" onAction="#goToCarsOnClick" opacity="0.85" prefHeight="200" prefWidth="200" style="-fx-background-color: #845EC2" text="CARS">
            <font>
                <Font name="Impact" size="25.0" />
            </font>
        </Button>

        <Button fx:id="btnRents" onAction="#goToRentsOnClick" opacity="0.85" prefHeight="200" prefWidth="200" style="-fx-background-color: #4E8397" text="RENTS">
            <font>
                <Font name="Impact" size="25.0" />
            </font>
        </Button>

        <Button fx:id="btnExit" onAction="#exitOnClick" opacity="0.85" prefHeight="200" prefWidth="200" style="-fx-background-color: #D5CABD" text="EXIT">
            <font>
                <Font name="Impact" size="25.0" />
            </font>
        </Button>

    </HBox>
</AnchorPane>
