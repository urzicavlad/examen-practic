<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<HBox alignment="center" prefHeight="500.0" prefWidth="650.0" xmlns="http://javafx.com/javafx/8.0.172-ea"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="ro.ubbcluj.client.controller.car.CarController">

    <VBox prefHeight="500.0" prefWidth="600.0">
        <Label prefHeight="45.0" prefWidth="80.0" text="Cars:">
            <font>
                <Font name="Impact" size="35.0"/>
            </font>
        </Label>
        <TableView fx:id="tableViewCars" editable="true" prefHeight="397.0" prefWidth="520.0">
            <columns>

                <TableColumn fx:id="tableColumnId" prefWidth="63.0" text="ID">
                    <cellValueFactory>
                        <PropertyValueFactory property="id"/>
                    </cellValueFactory>
                </TableColumn>

                <TableColumn fx:id="tableColumnModel" prefWidth="119.0" text="MODEL">
                    <cellValueFactory>
                        <PropertyValueFactory property="model"/>
                    </cellValueFactory>
                    <cellFactory>
                        <TextFieldTableCell fx:factory="forTableColumn"/>
                    </cellFactory>
                </TableColumn>

                <TableColumn fx:id="tableColumnKilometers" prefWidth="128.0" text="KILOMETERS">
                    <cellValueFactory>
                        <PropertyValueFactory property="kilometers"/>
                    </cellValueFactory>
                </TableColumn>

                <TableColumn fx:id="tableColumnPricePerDay" prefWidth="158.0" text="PRICE/DAY">
                    <cellValueFactory>
                        <PropertyValueFactory property="pricePerDay"/>
                    </cellValueFactory>
                    <cellFactory>
                        <TextFieldTableCell fx:factory="forTableColumn"/>
                    </cellFactory>
                </TableColumn>

                <TableColumn fx:id="tableColumnRentTimes" prefWidth="131.0" text="RENT-TIMES">
                    <cellValueFactory>
                        <PropertyValueFactory property="rentTimes"/>
                    </cellValueFactory>
                </TableColumn>

            </columns>

        </TableView>

        <HBox alignment="BOTTOM_RIGHT" prefHeight="70.0" prefWidth="600.0">
            <Button fx:id="btnAdd" layoutX="239.0" layoutY="31.0" onAction="#addOnClick" prefHeight="35.0"
                    prefWidth="75.0" text="Add">
                <HBox.margin>
                    <Insets bottom="15.0" right="38.0"/>
                </HBox.margin>
            </Button>
            <Button fx:id="btnUndo" layoutX="239.0" layoutY="31.0" onAction="#addOnClick" prefHeight="35.0"
                    prefWidth="75.0" text="Undo">
                <HBox.margin>
                    <Insets bottom="15.0" right="38.0"/>
                </HBox.margin>
            </Button>
            <Button fx:id="btnRedo" layoutX="239.0" layoutY="31.0" onAction="#addOnClick" prefHeight="35.0"
                    prefWidth="75.0" text="Redo">
                <HBox.margin>
                    <Insets bottom="15.0" right="38.0"/>
                </HBox.margin>
            </Button>
            <Button fx:id="btnDelete" layoutX="389.0" layoutY="31.0" onAction="#addOnClick" prefHeight="35.0"
                    prefWidth="75.0" text="Delete">
                <HBox.margin>
                    <Insets bottom="15.0" right="38.0"/>
                </HBox.margin>
            </Button>
            <Button fx:id="btnClear" layoutX="389.0" layoutY="31.0" onAction="#addOnClick" prefHeight="35.0"
                    prefWidth="75.0" text="Clear">
                <HBox.margin>
                    <Insets bottom="15.0" right="38.0"/>
                </HBox.margin>
            </Button>
        </HBox>

    </VBox>

</HBox>
